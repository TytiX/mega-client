{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    // "lib": ["es2017", "es7", "es6", "dom"],
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
